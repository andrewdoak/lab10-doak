<!--STORE Index-->
<header class="pt6 bg-photoshop vh-90 dt w-100 bb bw2 b--red shadow-4">
    <div class="vh-75 dtc v-btm-ns v-mid tl pa4 pb6 pl6-m ph7-l">
      <!--<time class="f6 mb2 dib ttu tracked"><small>27 July, 2015</small></time>-->
      <h1 class="playfair-display black-70 fw7 b kern ligatures f-headline-ns f-subheadline-m measure lh-title pb4">
        <span class="dn-s bg-blur-5 bg-white-70 lh-solid ph4 pb3 bt bw3 b--red shadow-4 w3-animate-top">
          &nbsp;Bookshop.&nbsp;
        </span>
        
         <span class="dn-ns mx-multiply lh-solid pb3 red w3-animate-top">
          &nbsp;Bookshop.&nbsp;
        </span>
      </h1>
      
      <!--Large Breakpoints-->
      <h5 class="space-mono ttu mt4 f6 black-80 tracked lh-copy w3-animate-top">
        <span class="dn-s mt3 pa2 bg-blur-5 bg-white-70 ba bw1 b--red shadow-4">
          Scroll down to shop and up your Ruby game!
        </span>
        
        <!--Medium & Small Breakpoints-->
        <span class="dn-ns space-mono dn-l mv2 pv2 lh-title">
          Scroll down to shop <br class="dn-ns">
          and up your Ruby game!
        </span>
      </h5>
      <br>
        <i class="red w3-animate-opacity fl w30 pa1 material-icons">arrow_downward</i>
    </div>
</header>
   
  
<div class="flex justify-center pt5">
  <!--Table width-->
  <div class="w-80-ns w-90">
    <table class=" w3-animate-bottom pt3 w3-responsive pb6">
        <!--<tr>-->
        <!--  <th>Title</th>-->
        <!--  <th>Description</th>-->
        <!--  <th>Cover</th>-->
        <!--  <th>Price</th>-->
        <!--</tr>-->
      </thead>
    
      <tbody class="">
        <% @products.each do |product| %>
          <tr>
            <td width="20%" class=""><h6 class="pt4 space-mono ttu lh-copy red"><%= product.title %></h6></td>
            <td width="50%"><p class="eb-garamond ligatures f4 lh-copy"><%= sanitize(strip_tags(product.description)) %></p></td>
            <td width="20%" class="bwneg"><%= image_tag(product.image_url) %></td>
            <td width="10%" class="">
              <p class="space-mono tracked red f5 lh-copy"><%= number_to_currency(product.price) %></p>
              <hr />
              <%= button_to 'Add to Cart', line_items_path(product_id: product), class:"space-mono ttu w3-mobile w3-button br-pill b--red grow w3-white w3-hover-red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

