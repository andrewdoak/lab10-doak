<header class="mt6 montserrat mb4">
    <div class="mw9 center pa4 pt5-ns ph7-l">
      <!--<time class="f6 mb2 dib ttu tracked"><small>27 July, 2015</small></time>-->
      <h3 class="f2 f1-m f-headline-l measure-narrow lh-title mv0">
        <span class="b bg-red ttu lh-solid white pa1 tracked w3-animate-top">
          Book.shop
        </span>
      </h3>
      <!--<h4 class="f3 fw1 w3-animate-top space-mono">Find me in app/views/static_pages/home.html.erb</h4>-->
      <h5 class="f6 red ttu tracked black-80 w3-animate-top space-mono">Find me in app/views/store/index.html.erb</h5>
    </div>
</header>
  
<div class="flex justify-center">
  <div class="w-80-ns">
    <table class=" w3-animate-bottom w3-table w3-bordered w3-responsive pt3">
      <thead class="montserrat b w3-centered red">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
        </tr>
      </thead>
    
      <tbody class="">
        <% @products.each do |product| %>
          <tr>
            <td class=""><h6 class="montserrat b lh-title red"><%= product.title %></h6></td>
            <td width="50%"><p class="eb-garamond f4 lh-copy"><%= sanitize(strip_tags(product.description)) %></p></td>
            <td><%= image_tag(product.image_url) %></td>
            <td class="">
              <p class="space-mono tracked red f5 lh-copy"><%= number_to_currency(product.price) %></p>
              <hr />
              <%= button_to 'Add to Cart', line_items_path(product_id: product), class:"space-mono w3-mobile w3-button br-pill grow w3-white w3-border w3-border-red w3-hover-red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

