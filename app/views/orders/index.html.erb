<div class="bg-photoshop vh-100 w-100 pt6">
  
<p id="notice" class="w3-panel montserrat ttu red"><%= notice %></p>

<div class="flex justify-center pt6">
  
  <div class="w-80-ns">
    <h1 class="playfair-display f-subheadline lh-solid red w3-animate-top">Orders</h1>
    <table class=" w3-animate-bottom w3-table w3-bordered w3-responsive pt3">
      <thead class="montserrat b ttu tracked lh-copy red w3-centered">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="playfair-display f4 red"><%= order.name %></td>
        <td class="space-mono f5 red"><%= order.address %></td>
        <td class="space-mono f5 red"><%= order.email %></td>
        <td class="space-mono f5 red"><%= order.pay_type %></td>
        <td><%= link_to 'Show', order , class:"space-mono w3-mobile w3-button br-pill grow w3-white w3-border w3-border-red w3-hover-red" %></td>
        <td><%= link_to 'Edit', edit_order_path(order) , class:"space-mono w3-mobile w3-button br-pill grow w3-white w3-border w3-border-red w3-hover-red" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } , class:"space-mono w3-mobile w3-button br-pill grow w3-white w3-border w3-border-red w3-hover-red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path , class:"w3-animate-bottom space-mono w3-mobile w3-button br-pill grow w3-white w3-border w3-border-red w3-hover-red" %>
