<!--ORDERS Index-->
<div class="bg-photoshop vh-100 w-100 pt6 bb bw2 b--red shadow-4">
  
<p id="notice" class="w3-animate-opacity f3 w3-text-red mx-multiply playfair-display" >
    <%= notice %>
</p>
    

<div class="flex justify-center pt3">
  
  <div class="w-60-ns w-90-m w-100-s">
    <h1 class="playfair-display mx-multiply f-subheadline lh-solid red w3-animate-top pb3">
      <span class"bb bw3 b--red">Orders</span>
    </h1>
    <table class="w3-animate-bottom pt3 collapse">
      <thead class="montserrat b red ttu tracked lh-copy near-black mx-multiply w3-centered">
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Payment</th>
          <th colspan="4"></th>
        </tr>
      </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="space-mono f5"><%= order.name %></td>
        <td class="space-mono f5"><%= order.address %></td>
        <td class="space-mono f5"><%= order.email %></td>
        <td class="space-mono f5"><%= order.pay_type %></td>
        <td><%= link_to 'Show', order , 
          class:"ttu tracked db w3-text-red grow w3-hover-none w3-hover-text-black ma1 f6 space-mono no-underline" %>
        <td><%= link_to 'Edit', edit_order_path(order) , 
        class:"ttu tracked db w3-text-red grow w3-hover-none w3-hover-text-black ma1 f6 space-mono no-underline" %>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } , 
          class:"ttu tracked db w3-text-red grow w3-hover-none w3-hover-text-black ma1 f6 space-mono no-underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>